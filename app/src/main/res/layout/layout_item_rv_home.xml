<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <ImageView
            android:id="@+id/imgBackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:background="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgMoreVert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/ic_more_vert"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgAvatar" />

        <TextView
            android:id="@+id/txtTitle"
            style="@style/TitleStyle.titleNormal"
            android:layout_width="@dimen/dp0"
            android:ellipsize="end"
            android:maxLines="@integer/max_line_2"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:text="Nhạc nnvnnvn h hh h h h h h h hh h h h h h h h h h h hh h h h h h h hh h hh h h h h h h h hh h hh h h h hh"
            app:layout_constraintEnd_toStartOf="@+id/imgMoreVert"
            app:layout_constraintStart_toEndOf="@+id/imgAvatar"
            app:layout_constraintTop_toTopOf="@+id/imgAvatar" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgBackground"
            app:riv_corner_radius="@dimen/_25sdp"
            app:riv_mutate_background="true" />

        <TextView
            android:id="@+id/txtDateTime"
            style="@style/TitleStyle.titleNormal"
            android:layout_width="@dimen/dp0"
            android:ellipsize="end"
            android:maxLines="@integer/max_line_1"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:textStyle="normal"
            android:textColor="@color/color_979797"
            android:text="Nhạc nnvnnvn h hh h h h h h h hh h h h h h h h h h h hh h h h h h h hh h hh h h h h h h h hh h hh h h h hh"
            app:layout_constraintStart_toStartOf="@+id/txtTitle"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle"
            app:layout_constraintEnd_toEndOf="@+id/txtTitle"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

    </data>
</layout>